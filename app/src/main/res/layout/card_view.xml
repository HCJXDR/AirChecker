<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/air_qualityTextView"
            android:layout_width="60dp"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="117"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/city_nameTextView"
            android:layout_width="250dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="false"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            tools:text="Unknow"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif"
            android:textColor="#333"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/air_qualityTextView"
            android:layout_above="@+id/gpsTextView"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/minTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min : "
            android:maxLines="1"
            android:layout_below="@+id/air_qualityTextView"
            android:layout_toEndOf="@+id/air_qualityTextView" />

        <TextView
            android:id="@+id/maxTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Max : "
            android:layout_marginEnd="64dp"
            android:layout_alignTop="@+id/minTextView"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/gpsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="false"
            android:text="GPS : "
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/air_qualityTextView" />


    </RelativeLayout>

</android.support.v7.widget.CardView>